<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!--  Used for settings preference theme -->
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>

    <!-- main activity action bar styls -->
    <style name="ActionBar.Solid.popularmovies.NoTitle"
        parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:displayOptions">useLogo|showHome</item>
        <item name="logo">@drawable/ic_movie_filter</item>
    </style>

    <style name="AppTheme.Main" parent="@style/AppTheme">
        <item name="actionBarStyle">@style/ActionBar.Solid.popularmovies.NoTitle</item>
    </style>

    <!-- Style used in the MovieActivity for the labels of the extra weather information -->
    <style name="MovieLabel" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/movie_accent_label</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- Styles used in the MovieActivity for the values of the extra movie information -->
    <style name="ExtraMovieInformation" parent="@style/TextAppearance.AppCompat.Headline">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>
